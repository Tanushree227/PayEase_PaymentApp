<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#030450"
    android:layout_height="match_parent"
    tools:context=".ToContactActivity">

    <ImageButton
        android:id="@+id/backContact"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/back_button" />

    <EditText
        android:id="@+id/tocontactnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name or Mobile Number"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"/>

    <TextView
        android:id="@+id/recentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tocontactnumber"
        android:layout_marginTop="20dp"
        android:text="Recents"
        android:textColor="@color/white"
        android:paddingStart="15dp"
        android:textSize="20dp"
        android:textStyle="bold"/>


</RelativeLayout>